<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_root"
    app:startDestination="@+id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.android.navigation.LoginFragmint"
        android:label="@string/top_label"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.android.navigation.WelcomeFragment"
        android:label="@string/top_label"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_instructionFragment"
            app:destination="@id/instructionFragment"
             />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.android.navigation.AddFragment"
        android:label="@string/top_label"
        tools:layout="@layout/fragment_add">
        <action
            android:id="@+id/action_gameWonFragment_to_gameFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@+id/loginFragment"/>

    </fragment>
    <fragment
        android:id="@+id/instructionFragment"
        android:name="com.example.android.navigation.InstructionFragment"
        android:label="@string/top_label"
        tools:layout="@layout/fragment_instruction">
        <action
            android:id="@+id/action_instructionFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.android.navigation.ListFragment"
        android:label="@string/top_label"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
    </fragment>

</navigation>